<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= kindofday %> </h1>
    </div>

    <div class="box">
        <% for(let i=0;i<newListItems.length;i++){ %>
        <div class="item">
            <input type="checkbox" class="check">
            <p><%=newListItems[i]%></p>
        </div>
        <%}%>
        <form action="/" method="POST">
            <input type="text" name="newItem" placeholder="Add a ToDo">
            <button type="submit">+</button>
        </form>
    </div>

<%- include("footer") -%>